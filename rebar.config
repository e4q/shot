%% == Erlang Compiler ==

{erl_opts, [
  debug_info
]}.

{minimum_otp_vsn, "19"}.

%% == Dependencies ==

{deps, [{prometheus_diameter_collector, "1.2.0"}, {eradius, "2.0.0"}]}.

%% == Release ==

{relx, [
  {release, { shot, "0.1.0" }, [shot, inets]},
  {sys_config, "./config/sys.config"},
  {vm_args, "./config/vm.args"},
  {dev_mode, true},
  {include_erts, false},
  {extended_start_script, true}
]}.

%% == Profiles ==

{profiles, [
  {prod, [
    {relx, [
      {dev_mode, false},
      {include_erts, true}
    ]}
  ]}
]}.

%% == Common Test ==

{ct_compile_opts, [
  debug_info
]}.

{ct_opts, [
  {sys_config, ["test/test.config"]}
  %{spec, "test/default.spec"}
]}.
